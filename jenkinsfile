pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                deleteDir()
            }
        }
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run test') {
            steps {
                bat returnStdout: true, script: 'virtualenv venv && venv\\Scripts\\activate.bat && pip install .\\ && pytest'
            }
        }
    }
}