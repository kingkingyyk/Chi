pipeline {
    agent any
    stages {
        stage('Clean up working dir') {
            steps {
                deleteDir()
            }
        }
        stage('Run test') {
            steps {
                bat returnStdout: true, script: '''virtualenv venv &&^
                venv\\Scripts\\activate.bat &&^
                pip install .\\ &&^
                pytest''
            }
        }
    }
}